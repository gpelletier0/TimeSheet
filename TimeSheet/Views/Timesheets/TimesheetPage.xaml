<?xml version="1.0" encoding="utf-8"?>

<views:ValidatorContentPage x:TypeArguments="vm:TimesheetViewModel"
                            xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                            xmlns:views="using:TimeSheet.Views"
                            xmlns:vm="using:TimeSheet.ViewModels.Timesheets"
                            x:Class="TimeSheet.Views.Timesheets.TimesheetPage"
                            x:DataType="vm:TimesheetViewModel"
                            Title="{Binding Title}">

    <ContentPage.Content>
        <Grid RowDefinitions="Auto, *, Auto"
              Padding="10">

            <VerticalStackLayout Grid.Row="0"
                                 Spacing="10">

                <Label Text="Date" />
                <DatePicker Format="dd-MM-yyyy"
                        Date="{Binding Date}" />

                <Label Text="Start Time" />
                <TimePicker Time="{Binding StartTime}" />

                <Label Text="End Time" />
                <TimePicker Time="{Binding EndTime}" />

                <Picker Title="Project"
                        ItemsSource="{Binding ProjectDtos}"
                        ItemDisplayBinding="{Binding Name}"
                        SelectedItem="{Binding SelectedProjectDto}" />

                <Label Text="Status" />
                <Picker ItemsSource="{Binding StatusDtos}"
                        ItemDisplayBinding="{Binding Name}"
                        SelectedItem="{Binding SelectedStatusDto}" />

                <Editor HeightRequest="80"
                        MaxLength="500"
                        Placeholder="Note"
                        Text="{Binding Note}" />

            </VerticalStackLayout>

            <Grid Grid.Row="2"
                  VerticalOptions="Center">

                <HorizontalStackLayout HorizontalOptions="Center"
                                       Spacing="10">

                    <Button WidthRequest="80"
                            BackgroundColor="DarkSeaGreen"
                            Text="Save"
                            Command="{Binding SaveCommand}" />

                    <Button WidthRequest="80"
                            Text="Delete"
                            BackgroundColor="IndianRed"
                            Command="{Binding DeleteCommand}" />
                </HorizontalStackLayout>

                <Button WidthRequest="80"
                        HorizontalOptions="End"
                        BackgroundColor="SlateGray"
                        Text="Cancel"
                        Command="{Binding CancelCommand}" />
            </Grid>

        </Grid>
    </ContentPage.Content>
</views:ValidatorContentPage>