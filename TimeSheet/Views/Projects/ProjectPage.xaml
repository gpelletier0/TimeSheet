<?xml version="1.0" encoding="utf-8"?>

<views:ValidatorContentPage x:TypeArguments="vm:ProjectViewModel"
                            xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                            xmlns:views="using:TimeSheet.Views"
                            xmlns:vm="using:TimeSheet.ViewModels.Projects"
                            xmlns:controls="using:TimeSheet.Controls"
                            x:Class="TimeSheet.Views.Projects.ProjectPage"
                            x:DataType="vm:ProjectViewModel"
                            Title="{Binding Title}">

    <ContentPage.Content>

        <Grid RowDefinitions="Auto, *, Auto"
              Padding="10">

            <VerticalStackLayout Grid.Row="0"
                                 Spacing="10">

                <Label Text="Name" />
                <Entry MaxLength="50"
                       Text="{Binding Name}" />

                <Label Text="Hourly Wage" />
                <controls:NumericEntry
                    AllowDecimal="True"
                    MaximumDecimalPlaces="2"
                    AlwaysShowDecimalPlaces="True"
                    AllowNegative="False"
                    NumericValue="{Binding HourlyWage}" />

                <Label Text="Client" />
                <Picker ItemsSource="{Binding ClientDtos}"
                        ItemDisplayBinding="{Binding Name}"
                        SelectedItem="{Binding SelectedClientDto}" />

                <Editor HeightRequest="80"
                        MaxLength="500"
                        Placeholder="Description"
                        Text="{Binding Description}" />

            </VerticalStackLayout>

            <Grid Grid.Row="2"
                  VerticalOptions="Center">

                <HorizontalStackLayout HorizontalOptions="Center"
                                       Spacing="10">

                    <Button WidthRequest="80"
                            BackgroundColor="DarkSeaGreen"
                            Text="Save"
                            Command="{Binding SaveCommand}" />

                    <Button WidthRequest="80"
                            Text="Delete"
                            BackgroundColor="IndianRed"
                            Command="{Binding DeleteCommand}" />
                </HorizontalStackLayout>

                <Button WidthRequest="80"
                        HorizontalOptions="End"
                        BackgroundColor="SlateGray"
                        Text="Cancel"
                        Command="{Binding CancelCommand}" />
            </Grid>

        </Grid>

    </ContentPage.Content>

</views:ValidatorContentPage>